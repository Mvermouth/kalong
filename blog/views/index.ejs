<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="keywords" content="vermouth,nodejs,html,css3,js">
    <title>Vermouth</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/jumbotron.css" rel="stylesheet">
    <link rel="shortcut icon" href="images/vermouth.ico">
    <script>
        (function (doc, win) {
            var docEl = doc.documentElement,
                resizeEvt = 'orientationchange' in window ? 'orientationchange' : 'resize',
                recalc = function () {
                    var clientWidth = docEl.clientWidth;
                    if (!clientWidth) return;
                    if (clientWidth >= 640) {
                        docEl.style.fontSize = '100px';
                    } else {
                        docEl.style.fontSize = 100 * (clientWidth / 640) + 'px';
                    }
                };
            if (!doc.addEventListener) return;
            win.addEventListener(resizeEvt, recalc, false);
            doc.addEventListener('DOMContentLoaded', recalc, false);
        })(document, window);
    </script>
</head>
<style>
    body,h1,h5{
        padding: 0;
        margin:0;
        /*background: #ccc;*/
    }
    a,a:hover{
        text-decoration: none;
    }
    .navb{
        width: 100%;
        height: 4.2rem;
        overflow:hidden;
    }
    .navv{
        width: 1920px;
        height: 4.2rem;
        background: url("images/timg.jpg");
        position:relative; left:50%;
        margin-left:-960px;
    }
    .navv h1{
        text-align: center;
        font-size: 0.80rem;
        padding-top:0.80rem ;
    }
    .navv h5{
        position: fixed;
        left: 0.5rem;
        top: 3.8rem;
        width: 60px;
        text-align: center;
    }
    .navv h5 a{
        color: white;
    }
    .navv h5 a:hover{
        color: red;
    }
    .content{
        padding-top: 0.30rem;
        /*background: ;*/
    }
    .box{
        width: 8rem;
        display: flex;
        justify-items: center;
        align-items: center;
        /*border: 1px solid red;*/
    }
    .box p{
        width: 7rem;
        word-wrap:break-word;
    }
    body {

        font-size: 11px;
        font-family: 'Open Sans', sans-serif;
        color: #4A4A4A ;
        text-align: center;
    }

    .box3{
        margin: 20px auto;
        width: 8rem;
        min-height: 310px;
        padding: 10px;
        position:relative;
        background: -webkit-gradient(linear, 0% 20%, 0% 92%, from(#fff), to(#f3f3f3), color-stop(.1,#fff));
        border: 1px solid #ccc;
        -webkit-border-radius: 60px 5px;
        -webkit-box-shadow: 0px 0px 35px rgba(0, 0, 0, 0.1) inset;
    }

    .box3:before{
        content: '';
        width: 50px;
        height: 50px;
        top:0; right:0;
        position:absolute;
        display: inline-block;
        z-index:-1;
        -webkit-box-shadow: 10px -10px 8px rgba(0, 0, 0, 0.2);
        -webkit-transform: rotate(2deg)
        translate(-14px,20px)
        skew(-20deg);
    }

    .box3:after{
        content: '';
        width: 100px;
        height: 100px;
        top:0; left:0;
        position:absolute;
        z-index:-1;
        display: inline-block;
        -webkit-box-shadow: -10px -10px 10px rgba(0, 0, 0, 0.2);
        -webkit-transform: rotate(2deg)
        translate(20px,25px)
        skew(20deg);
    }

    .box3 .fi {
        width: 100%;
        margin-top: 15px;
    }

    p{
        margin-top: 15px;
        text-align: justify;
    }

    h1{
        font-size: 20px;
        font-weight: bold;
        margin-top: 5px;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
    }

    a{
        text-decoration: none;
        color: #4A4A4A;
    }

    a:hover{
        /*text-decoration: underline;*/
        color: #6B6B6B;
    }
    /*.list-group-item a:hover {*/
        /*color: white;*/
    /*}*/
</style>
<body>
<div class="container-fluid navb">
    <div class="navv">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1>Vermouth</h1>
                <h5><a href="/login">随便写写</a><a href="/all">所有</a></h5>
            </div>
        </div>
    </div>
</div>


    <div class="container content">
        <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box3">
                        <h1><%= f.title %></h1>
                        <img src="images/vermouth.jpg" class="img-responsive fi">
                        <br />
                    </div>
                </div>

            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                <ul class="list-group">
                    <li class="list-group-item"><a href="javascript:void(0)" style="color: black;font-weight:bold;">最近</a></li>
                    <% for(var i=0;i<5;i++){ %>
                    <li class="list-group-item"><a href="/detail?id=<%= r[i]._id %>"><%= r[i].title %></a></li>
                    <% } %>
                </ul>

            </div>

        </div>
    </div>

    <script src="/js/jquery-3.1.0.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/underscore-noflect.js"></script>
    <script src="/js/page.js"></script>
<script>
       $.post("/one",function(res){
          // console.log(res.content);
           $(".box3").append(res.content);
       })
    $(".list-group li").hover(function(){
        $(this).css("background","red");
        $(this).find("a").css("color","white");
    },function(){
        $(this).css("background","white");
        $(this).find("a").css("color","black");
    })
</script>
</body>
</html>